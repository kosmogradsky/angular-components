{
  "compileOnSave": false,
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "shared": [
        "dist/shared"
      ],
      "shared/*": [
        "dist/shared/*"
      ],
      "utils": [
        "dist/utils"
      ],
      "utils/*": [
        "dist/utils/*"
      ],
      "charts": [
        "dist/charts"
      ],
      "charts/*": [
        "dist/charts/*"
      ],
      "i18n": [
        "dist/i18n"
      ],
      "i18n/*": [
        "dist/i18n/*"
      ],
      "calendar": [
        "dist/calendar"
      ],
      "calendar/*": [
        "dist/calendar/*"
      ],
      "navigation": [
        "dist/navigation"
      ],
      "navigation/*": [
        "dist/navigation/*"
      ],
      "table": [
        "dist/table"
      ],
      "table/*": [
        "dist/table/*"
      ],
      "store": [
        "dist/store"
      ],
      "store/*": [
        "dist/store/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  }
}